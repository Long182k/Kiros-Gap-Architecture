# GapAnalyzer Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Domain or IP Address
# If you don't have a domain, use your VPS IP (e.g., 45.130.164.200)
DOMAIN=45.130.164.200
ACME_EMAIL=your-email@example.com

# ============================================
# Database
# ============================================
POSTGRES_USER=gapanalyzer
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=gapanalyzer
DATABASE_URL=postgresql://gapanalyzer:your_secure_password_here@postgres:5432/gapanalyzer

# ============================================
# Redis
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# AI Provider
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Frontend
# ============================================
NEXT_PUBLIC_API_URL=http://backend:3001
CORS_ORIGIN=https://your-domain.com

# ============================================
# Monitoring
# ============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# ============================================
# Traefik Dashboard (optional)
# Generate with: htpasswd -nb admin password
# ============================================
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$xyz...
